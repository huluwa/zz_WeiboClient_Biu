<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/base_actionbar</item>
        <item name="colorPrimaryDark">@color/base_status_bar</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/transparent_1</item>
        <item name="CardBackground">@color/white</item>
        <item name="CardForeground">@color/gray</item>
        <item name="android:windowBackground">@color/white</item>



    </style>

    <style name="AppTheme" parent="AppBaseTheme">


    </style>

    <style name="AppTheme.Main">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.UserHome">
        <item name="fits_windows">true</item>
    </style>

</resources>
