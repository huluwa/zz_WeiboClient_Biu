<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2f5a81</item>
        <item name="colorPrimaryDark">#1c364d</item>
        <item name="colorAccent">@color/transparent_1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="CardBackground">@color/white</item>
        <item name="CardForeground">@color/gray</item>
        <item name="fits_windows">false</item>
    </style>

    <style name="AppBaseTheme.Dark" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="ThemeToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <!-- color of the menu overflow icon -->
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>

    </style>

    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/txt_remark</item>
    </style>
    <style name="AppTheme" parent="AppBaseTheme">

    </style>
    <style name="AppTheme.Main">
        <item name="MenuIconTint">@color/ic_tint_nor</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>
    <style name="UserHome" parent="AppTheme">
        <item name="fits_windows">true</item>
    </style>



    <style name="moment_btn_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/btn_moment_operater_selector</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="txt_remark">
        <item name="android:textColor">@color/txt_remark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="txt_main_content">
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txt_main_content_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txt_menu">
        <item name="android:textColor">@drawable/menu_txt_color_selector</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="txt_user_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_user_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="text_moment_location">
        <item name="android:textColor">@color/base_deep</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="text_btn">
        <item name="android:textColor">@color/txt_remark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_moment_btn">
        <item name="android:textColor">#9fa1a3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>


    <style name="text_user_name">
        <item name="android:textColor">@color/base</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
