<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2f5a81</item>
        <item name="colorPrimaryDark">#1c364d</item>
        <item name="colorAccent">@color/transparent_1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="CardBackground">@color/white</item>
        <item name="CardForeground">@color/gray</item>
        <item name="fits_windows">false</item>
        <item name="android:windowBackground">@color/base</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!--Translucent system bars-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    
  <style name="AppTheme.Main">
      <item name="android:windowIsTranslucent">false</item>
      <item name="fits_windows">false</item>
      <item name="MenuIconTint">@color/ic_tint_nor</item>
   </style>
    <style name="UserHome" parent="AppTheme.Main">
        <item name="android:windowIsTranslucent">false</item>
        <item name="fits_windows">false</item>
        <item name="colorAccent">@color/material_blue_grey_800</item>
    </style>


</resources>
